client

ca /var/lib/puppet/ssl/certs/ca.pem
cert <%= File.file?("/var/lib/puppet/ssl/certs/#{hostname}.pem") ? "/var/lib/puppet/ssl/certs/#{hostname}.pem" : "/var/lib/puppet/ssl/certs/#{fqdn}.pem" %>
key <%= File.file?("/var/lib/puppet/ssl/private_keys/#{hostname}.pem") ? "/var/lib/puppet/ssl/private_keys/#{hostname}.pem" : "/var/lib/puppet/ssl/private_keys/#{fqdn}.pem" %>

dev tun
proto udp
group nogroup
user nobody
remote <%= server %> 1194
resolv-retry infinite
nobind
persist-key
persist-tun
mute-replay-warnings
;ns-cert-type server
verb 3
mute 20
cipher none
topology subnet

<% if compress %>
comp-lzo
<% end %>
